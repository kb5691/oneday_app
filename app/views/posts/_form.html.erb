<%= render "layouts/error_messages" %>
<%= form_with model: @post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :recommend_point %>
    <%= form.text_area :recommend_point, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :situation %>
    <%= form.text_field :situation, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :area %>
    <%= form.text_field :area, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :recommend_image %>
    <%= form.file_field :recommend_image, accept: "image/png,image/jpeg,image/gif", class: "form-control-file" %>
  </div>
  <p>おすすめ度(1~5の中から選んでください)</p>
  <% if request.path_info == new_post_path %>
    <%= form.fields_for :post_valuation, @post.build_post_valuation do |post_val| %>
      <div class="form-row">
        <div class="col">
          <%= post_val.label :access_point %>
          <%= post_val.number_field :access_point, min: 1, max: 5, class: "form-control" %>
        </div>
        <div class="col">
          <%= post_val.label :casually_point %>
          <%= post_val.number_field :casually_point, min: 1, max: 5, class: "form-control" %>
        </div>
        <div class="col">
          <%= post_val.label :price_point %>
          <%= post_val.number_field :price_point, min: 1, max: 5, class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <%= post_val.label :go_to_again_point %>
          <%= post_val.number_field :go_to_again_point, min: 1, max: 5, class: "form-control" %>
        </div>
        <div class="col">
          <%= post_val.label :one_person_point %>
          <%= post_val.number_field :one_person_point, min: 1, max: 5, class: "form-control" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= form.fields_for :post_valuation do |post_val| %>
      <div class="form-row">
        <div class="col">
          <%= post_val.label :access_point %>
          <%= post_val.number_field :access_point, min: 1, max: 5, class: "form-control" %>
        </div>
        <div class="col">
          <%= post_val.label :casually_point %>
          <%= post_val.number_field :casually_point, min: 1, max: 5, class: "form-control"%>
        </div>
        <div class="col">
          <%= post_val.label :price_point %>
          <%= post_val.number_field :price_point, min: 1, max: 5, class: "form-control" %>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <%= post_val.label :go_to_again_point %>
          <%= post_val.number_field :go_to_again_point, min: 1, max: 5, class: "form-control" %>
        </div>
        <div class="col">
          <%= post_val.label :one_person_point %>
          <%= post_val.number_field :one_person_point, min: 1, max: 5, class: "form-control" %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div>
    <%= form.submit button_value, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
